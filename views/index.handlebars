<script>

  var tweets = jQuery(".tweet");

  jQuery(tweets).each(function (t, tweet) {

    var id = jQuery(this).attr('id');

    twttr.widgets.createTweet(
      id, tweet,
      {
        // none or all
        conversation: 'none',
        // hidden or visible 
        cards: 'visible',
        // default is #cc0000
        linkColor: '#cc0000',
        // light or dark
        theme: 'light'
      });

  });

</script>


